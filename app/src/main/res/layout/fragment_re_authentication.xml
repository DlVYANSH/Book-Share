<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReAuthenticationFragment">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="You need to re-authenticate in order to change the email/password"
        android:textSize="20sp"
        android:textColor="@color/grey"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tl_email_RA"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_email_RA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/OutlinedRoundBox"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_email_RA"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Email id"
        android:textSize="20sp"
        android:maxLength="35"
        android:maxLines="1"
        android:textColor="@color/grey"
        android:inputType="textEmailAddress"
        android:padding="10dp"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_password_RA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/OutlinedRoundBox"
        android:layout_marginTop="16dp"
        app:passwordToggleEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/tl_email_RA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_password_RA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Password"
            android:textSize="20sp"
            android:maxLength="15"
            android:maxLines="1"
            android:textColor="@color/grey"
            android:inputType="textPassword"
            android:padding="0dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_forgotPass_RA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:text="Forgot Password?"
        android:textColor="#1F54BB"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tl_password_RA" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_newEmail_RA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/OutlinedRoundBox"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_forgotPass_RA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_newEmail_RA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="New email id"
            android:textSize="20sp"
            android:maxLength="35"
            android:maxLines="1"
            android:visibility="gone"
            android:textColor="@color/grey"
            android:inputType="textEmailAddress"
            android:padding="10dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_newPass_RA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/OutlinedRoundBox"
        android:layout_marginTop="16dp"
        app:passwordToggleEnabled="true"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_forgotPass_RA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_newPass_RA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="New password"
            android:textSize="20sp"
            android:maxLength="15"
            android:maxLines="1"
            android:textColor="@color/grey"
            android:inputType="textPassword"
            android:padding="0dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_re_new_pass_RA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/OutlinedRoundBox"
        android:layout_marginTop="16dp"
        app:passwordToggleEnabled="true"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tl_newPass_RA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_re_new_pass_RA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="New password"
            android:textSize="20sp"
            android:maxLength="15"
            android:maxLines="1"
            android:textColor="@color/grey"
            android:inputType="textPassword"
            android:padding="10dp"/>

    </com.google.android.material.textfield.TextInputLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_reAuthenticate"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/profile_shape"
        android:backgroundTint="@color/colorPrimary"
        android:text="Log In"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_forgotPass_RA" />

    <ProgressBar
        android:id="@+id/progressBarRA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/orange"
        android:visibility="gone"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>