<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReAuthenticationFragment">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="You need to re-authenticate in order to change the email/password"
        android:textSize="20sp"
        android:textColor="@color/grey"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="170dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_email_RA"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="@drawable/profile_shape"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:hint="Enter Email id"
        android:textSize="20sp"
        android:maxLength="35"
        android:maxLines="1"
        android:textColor="@color/grey"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_message" />

    <EditText
        android:id="@+id/et_password_RA"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="@drawable/profile_shape"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:hint="Enter password"
        android:maxLength="15"
        android:maxLines="1"
        android:textSize="20sp"
        android:textColor="@color/grey"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_email_RA" />

    <TextView
        android:id="@+id/tv_forgotPass_RA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:text="Forgot Password?"
        android:textColor="#1F54BB"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password_RA" />

    <EditText
        android:id="@+id/et_newEmail_RA"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/profile_shape"
        android:hint="Enter new Email"
        android:inputType="textEmailAddress"
        android:paddingStart="16dp"
        android:maxLength="35"
        android:maxLines="1"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_forgotPass_RA" />

    <EditText
        android:id="@+id/et_newPass_RA"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/profile_shape"
        android:hint="Enter new password"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:maxLength="15"
        android:maxLines="1"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_forgotPass_RA" />

    <EditText
        android:id="@+id/et_re_new_pass_RA"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingStart="16dp"
        android:maxLength="15"
        android:maxLines="1"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:visibility="gone"
        android:background="@drawable/profile_shape"
        android:hint="Re enter new password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_newPass_RA" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_reAuthenticate"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/profile_shape"
        android:backgroundTint="@color/colorPrimary"
        android:text="Log In"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_forgotPass_RA" />

    <ProgressBar
        android:id="@+id/progressBarRA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/orange"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>