<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FFFFFF">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_book"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginTop="60dp"
        android:elevation="0dp"
        android:padding="4dp"
        app:cardCornerRadius="4dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    <ImageView
        android:id="@+id/iv_book"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/book"
        android:scaleType="centerCrop"/>

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="84dp"
        android:elevation="8dp"
        android:src="@drawable/ic_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cv_book" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_book_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/OutlinedRoundBox"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@id/cv_book"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_book_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:padding="12dp"
            android:hint="Book's Name"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_author_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/OutlinedRoundBox"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tl_book_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_author_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:padding="12dp"
        android:hint="Author's Name"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/OutlinedRoundBox"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tl_author_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_price"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="number"
        android:maxLines="1"
        android:padding="12dp"
        android:hint="Price"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_publishBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Publish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tl_price" />

    <ProgressBar
        android:id="@+id/pb_upload"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/orange"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>