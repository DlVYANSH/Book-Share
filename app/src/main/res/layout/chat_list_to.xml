<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile_pic_clTo"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_margin="8dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorPrimary"
        android:src="@drawable/ic_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_message_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:maxWidth="240dp"
        android:textSize="16sp"
        android:textColor="@color/grey"
        android:padding="14dp"
        android:background="@drawable/rounded_corner_white"
        android:text="This is my message that will wrap into multiple lines."
        app:layout_constraintStart_toEndOf="@id/iv_profile_pic_clTo"
        app:layout_constraintTop_toTopOf="@id/iv_profile_pic_clTo"/>

</androidx.constraintlayout.widget.ConstraintLayout>