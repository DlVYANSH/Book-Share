<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile_pic_clFrom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        app:civ_border_width="2dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_message_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:maxWidth="240dp"
        android:padding="16dp"
        android:background="@drawable/rounded_corner_white"
        android:text="This is my message that will wrap into multiple lines."
        app:layout_constraintStart_toEndOf="@id/iv_profile_pic_clFrom"
        app:layout_constraintTop_toTopOf="@id/iv_profile_pic_clFrom"/>

</androidx.constraintlayout.widget.ConstraintLayout>