<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookDetail">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_book_image_bookDetail"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginTop="60dp"
        android:elevation="0dp"
        android:padding="4dp"
        app:cardCornerRadius="4dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    <ImageView
        android:id="@+id/iv_book_bookDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/book"
        android:scaleType="centerCrop"/>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_book_name_bookDetail"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="Book Name"
        android:background="@drawable/profile_shape"
        android:paddingStart="16dp"
        android:layout_marginTop="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="20sp"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_book_image_bookDetail" />

    <TextView
        android:id="@+id/tv_author_name_bookDetail"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="Author Name"
        android:background="@drawable/profile_shape"
        android:paddingStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="20sp"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_book_name_bookDetail" />

    <TextView
        android:id="@+id/tv_price_bookDetail"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="24 Rs"
        android:background="@drawable/profile_shape"
        android:paddingStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="20sp"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_author_name_bookDetail" />

    <Button
        android:id="@+id/btn_contact_seller"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:text="contact seller"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/profile_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_price_bookDetail" />
</androidx.constraintlayout.widget.ConstraintLayout>